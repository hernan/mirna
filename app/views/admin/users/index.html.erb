<h2>Users</h2>

<% if @users.empty? %>
  <p>No users found, create a <%= link_to 'new', new_admin_user_path %> one</p>
<% else %>
<p><%= link_to "Add User", new_admin_user_path %></p>
  <table class="striped">
    <thead data-theme="dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Admin</th>
        <th>Active</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.admin? %></td>
          <td><%= user.active? %></td>
          <td>
            <%= link_to "Edit", edit_admin_user_path(user) %>
            &nbsp;
            <%= link_to "Remove", admin_user_path(user), data: { turbo_method: "delete", turbo_confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
